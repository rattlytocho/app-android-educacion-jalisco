<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="2dp"
    app:cardMaxElevation="8dp"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/primary_title_left_padding"
            android:layout_marginTop="@dimen/primary_title_left_padding"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secretaría de Educación Jalisco "
            android:id="@+id/textView2"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/img" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asiste a la caravana #MujeresAvanzando que el próximo martes visitará la Col. Heliodoro Hernández Loza."
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:textSize="18dp"
            android:layout_marginLeft="@dimen/primary_title_left_padding"
            android:layout_marginRight="@dimen/primary_title_left_padding"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="0dp"
            android:textColor="@color/gray_700"
            android:clickable="true"
            android:linksClickable="true"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>